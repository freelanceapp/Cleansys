<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/x_border_et"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/black"
                android:gravity="center"
                android:padding="10dp"
                android:text="State : "
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:padding="10dp"
                android:text="Scheduled"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:text="ID "
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:text="Schedule "
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_scdule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Not Scheduled"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:text="Crew Members"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_member"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="No Crew Members added"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.5"
                android:text="Customer  "
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_customer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[,MRS Massey RG9 5HN] RG9 5HN, 28 Shiplake Bottom, Henley- On - Thames, RG9 5HN"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.5"
                android:text="Est.Price	"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_est_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Â£sfgsdgag"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_adpjoblist_edit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="@drawable/x_button"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_adpjoblist_attachment"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="15dp"
                android:padding="@dimen/common_10_dp"
                android:background="@drawable/x_button"
                android:text="Attachment"
                android:textColor="@color/white"
                android:textSize="@dimen/text_form"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
