<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/x_border_et"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:gravity="center"
                android:padding="10dp"
                android:text="State : "
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="ID "
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Payment Status "
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_scdule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Crew Members"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Customer  "
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Est.Price	"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_adpjoblist_est_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Attachment"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAttachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Customer Ref#"
                android:textColor="@color/black"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_customer_reference_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_form" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_adpjoblist_edit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="@drawable/x_button"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_adpjoblist_attachment"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:background="@drawable/x_button"
                android:padding="@dimen/common_10_dp"
                android:text="Attachment"
                android:textColor="@color/white"
                android:textSize="@dimen/text_form"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
